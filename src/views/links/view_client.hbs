<div class="d-flex" id="wrapper">

  <!-- Sidebar -->
  {{>sidebar}}

  <!-- Page Content -->
  <div id="page-content-wrapper">

    {{>nav-sidebar}}

    <div class="container p-4">
        <div class="row">
          <div class="text-center mb-2">
            <a href="#" class="btn" data-toggle="modal" data-target="#search">Search</a>
            <a href="/links/register_client"  class="btn ">Register</a>
            <a href="/links/view_client"  class="btn ">Show client</a>
          </div>
          <table class="table">

            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">IdCard</th>
                <th scope="col">Email</th>
                <th scope="col">Telefono</th>
                <th scope="col">Direccion</th>
                <th scope="col">Fecha</th>
                <th scope="col"></th>
                <th scope="col"></th>
              </tr>
            </thead>

            <tbody>
              {{#each client}}
              <tr>
                <th scope="row">{{idCliente}}</th>
                <td>{{Nombre}}</td>
                <td>{{Apellido}}</td>
                <td>{{Cedula}}</td>
                <td>{{Email}}</td>
                <td>{{Telefono}}</td>
                <td>{{Direccion_idDireccion}}</td>
                <td>{{timeago Fecha_registro}}</td>
                <td><a class="btn"  href="/links/edit_client/{{idCliente}}/{{Direccion_idDireccion}}">Edit</a></td>
                <td><a class="btn"  href="/links/delet/{{idCliente}}">Delete</a></td>
              </tr>
              {{else}}
              <div class="modal" id="notify" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-body">
                      <div class="container">
                        <img src="../images/3410492.png" class="logo ml-3" alt="">
                        <h1 class="text-center p-3 ml-3">FumGas</h1>
                        <div class="col-md-12 text-center pb-3">
                          <p class="m-2">
                            No hay Clientes registrados, Crea un nuevo cliente
                            <i class="fas fa-exclamation"></i>
                            <i class="fas fa-exclamation"></i>
                            <i class="fas fa-exclamation"></i>
                          </p>
                        </div>

                        <div class="col-md-12 mx-auto text-center p-3">
                          <a href="/links/register_client" id="registro">Crea uno ahora mismo</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  {{>search}}