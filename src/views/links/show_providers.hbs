<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <!-- Page Content -->
    <div id="page-content-wrapper">

        {{>nav-sidebar}}

        <div class="container p-3">
            <div class="row">
                <div class="text-center mb-2">
                    <a href="#" class="btn" data-toggle="modal" data-target="#search">Search</a>
                    <a href="/links/providers" class="btn">Register providers</a>
                    <a href="#" class="btn ">Show providers</a>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">

                <table class="table">

                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name Company</th>
                            <th scope="col">Rif</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefono</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each providers}}

                        <tr>
                            <th scope="row">{{idProveedores}}</th>
                            <td>{{Nombre}}</td>
                            <td>{{Rif}}</td>
                            <td>{{Email}}</td>
                            <td>{{Telefono}}</td>
                            <td><a class="btn" href="/links/edit_providers/{{idProveedores}}">Edit</a></td>
                            <td><a class="btn" href="/links/delete_providers/{{idProveedores}}">delete</a></td>

                        </tr>
                        {{else}}
                        <div class="modal" id="notify" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div class="container">
                                            <img src="../images/3410492.png" class="logo ml-3" alt="">
                                            <h1 class="text-center p-3 ml-3">FumGas</h1>
                                            <div class="col-md-12 text-center pb-3">
                                                <p class="m-2">
                                                    No hay usuarios registrados, Por favor crea un nuevo usuario
                                                    <i class="fas fa-exclamation"></i>
                                                    <i class="fas fa-exclamation"></i>
                                                    <i class="fas fa-exclamation"></i>
                                                </p>
                                            </div>

                                            <div class="col-md-12 mx-auto text-center p-3">
                                                <a href="/links/index" id="registro">Crea uno ahora mismo</a>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>searchProviders}}