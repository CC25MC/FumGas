    <!-- Page Content -->
    <div id="page-content-wrapper">

        {{>nav-sidebar}}

        <!-- Contenido -->

        <div class="container p-4">
            <div class="row">
                <div class="text-center mb-2">
                    <a href="#" class="btn" data-toggle="modal" data-target="#search">Search</a>
                    <a href="#" class="btn">Register providers</a>
                    <a href="/links/show_providers" class="btn ">Show providers</a>
                </div>
            </div>
        </div>

        <div class="modal-dialog modal-xl" id="signUp" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="container">
                        <img src="../images/3410492.png" class="logo ml-3" alt="">
                        <h1 class="text-center p-3 ml-3">FumGas</h1>
                        <form action="/links/providers" method="POST">


                            <div class="row">
                                <div class="col-md-6 ">
                                    <h5 class="text-center p-3 ">Providers</h5>
                                    <div class="container ml-5">
                                        <div class="row mt-4">
                                            <div class="col-md-12 ">
                                                <input type="text" class="form-control" name="Nombre"
                                                    placeholder="Name Company" required>
                                                <div class="invalid-feedback">
